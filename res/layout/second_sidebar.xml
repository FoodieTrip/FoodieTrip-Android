<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7f7f7f"
    android:gravity="right"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/secSide_userName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="18dp"
        android:layout_marginTop="15dp"
        android:background="#002f5e"
        android:layout_gravity="right"
        android:gravity="right"
        android:text=""
        android:textColor="#7dbeff"
        android:textSize="33sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <Button
        android:id="@+id/secSide_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="7dp"
        android:text="@string/itemList_alertLogoutTitle"
        android:visibility="gone" />

    <Button
        android:id="@+id/secSide_setUserData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="7dp"
        android:layout_marginRight="5dp"
        android:background="@null"
        android:text="@string/secSide_setUserData"
        android:textColor="#d2ffff"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/secSide_Guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        android:text="@string/secSide_Guest"
        android:textColor="#d9d9d9"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/secSide_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|right"
        android:layout_marginTop="9dp"
        android:layout_marginRight="5dp"
        android:background="@null"
        android:text="@string/secSide_Login"
        android:textColor="#d2ffff"
        android:textStyle="bold" />

</LinearLayout>