<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/modify_phoneNumberLocked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_phone"
            android:textStyle="bold"
            android:textColor="#3366FF"
            android:textSize="21sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="" />
        
        <!-- 水平線 -->
        <View
            android:id="@+id/message_horizontalline"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="#c6c6c6"/>
        
       <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:text="@string/register_email"
            android:textSize="21sp" />

        <EditText
            android:id="@+id/modify_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/register_nickName"
            android:textSize="21sp" />

        <EditText
            android:id="@+id/modify_nickname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:ems="10" >
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/register_sex"
            android:textSize="21sp" />

        <RadioGroup
            android:id="@+id/modify_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/modify_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_sex_girl" />

            <RadioButton
                android:id="@+id/modify_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_sex_boy" />

            <RadioButton
                android:id="@+id/modify_xgender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_sex_xsex" />
        </RadioGroup>

    </LinearLayout>

</ScrollView>