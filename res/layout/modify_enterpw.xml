<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_warning"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:text="@string/modify_warning" />

    <EditText
        android:id="@+id/modify_pwComfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" >
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/modify_okay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alertDialogOkay" />

        <Button
            android:id="@+id/modify_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alertDialogCancel" />

    </LinearLayout>

</LinearLayout>
