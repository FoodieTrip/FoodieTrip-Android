<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:orientation="vertical" >

         <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#00A9E1"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="@string/login_title" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="5dp"
             android:text="@string/login_account"
             android:textSize="21sp" />

        <EditText
            android:id="@+id/login_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:inputType="phone"
            android:ems="10" >

        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/login_password"
            android:textSize="21sp" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/login_showPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/login_showPassword" />

        <Button
            android:id="@+id/btn_toRegister"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#0082C3"
            android:background="@null"
            android:layout_marginTop="8dp"
            android:text="@string/login_iWantToRegister" />

        <Button
            android:id="@+id/btn_forgetPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#0082C3"
            android:textStyle="bold"
            android:background="@null"
            android:layout_marginTop="8dp"
            android:text="@string/forgot_myPw" />

        <TextView
            android:id="@+id/login_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#E13800"
            android:text="" />

    </LinearLayout>
</ScrollView>
